<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="AndroidDataBinding" injector-id="xml">
      <display-name>item/@*</display-name>
      <place><![CDATA[xmlAttribute().withNamespace(string().equalTo("http://schemas.android.com/apk/res/android")).withParent(xmlTag().withLocalName(string().equalTo("item")))]]></place>
    </injection>
  </component>
</application>